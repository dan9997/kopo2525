#include <stdio.h>

int main()
{
    double a = 0;
    int tem=0;
    scanf_s("%lf", &a);

    if (a >= 30) {
   	tem = 1;
    }
    else if (a >= 25) {
   	tem = 2;
    }
    else if (a >= 15) {
 	tem = 3;
    }
    else if (a >= 5) {
 	tem = 4;
    }
    else if (a >= 0) {
 	tem = 5;
    }
    else
 	tem = 6;

    switch (tem) {
    case 1:
	printf("너무 더워요 반팔과 반바지를 입으세요.\n");
	break;
    case 2:
	printf("따뜻한 날씨입니다! 가벼운 옷을 입으세요.\n");
	break;
    case 3:
	printf("선선한 날씨입니다! 가벼운 겉옷을 챙기세요.\n");
	break;
    case 4:
	printf("조금 쌀쌀합니다! 따뜻한 옷을 입으세요.\n");
	break;
    case 5:
	printf("매우 춥습니다! 두꺼운 외투를 꼭 입으세요.\n");
	break;
    case 6:
	printf("한파 경고! 패딩과 장갑 모자를 착용하세요.");
	break;
    }

    return 0;
}
