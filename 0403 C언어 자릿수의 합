#include <stdio.h>

int main()
{
    int a = 0;
    int a2, a3, a4;
    scanf_s("%d", &a);

    if (999 >= a && a % 1 == 0 && a > 0) {
	a2 = a % 10;
	a3 = (a % 100 - a2) / 10; // 십의 자리
	a4 = (a % 1000 - a3 - a2) / 100; //백의자리
	printf("%d\n", a2 + a3 + a4);
    } else {
        printf("잘못된 입력. 양수인 정수만 입력하세요.");
    }
    return 0;
}
