#include <stdio.h>
#include <time.h>
void calender(int year, int month);
void D_day(int year, int month, int day);

int main()
{
    int year, month, dday, year2, month2, dday2;
    while(1){
    printf("\n yyyy mm입력 \n");
    scanf("%d %d", &year, &month);
    printf("\n D-day. yyyy mm dd 입력\n ");
    scanf("%d %d %d", &year2, &month2, &dday);
    calender(year, month);
    D_day(year2, month2, dday);
    }
    return 0;
}

void D_day(int year, int month, int day){
    int mtday[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
    int month2 = month - 1;
    int dday = 0;
    
    time_t timer;
    struct tm* t;
    timer = time(NULL);
    t = localtime(&timer);
    int today = t->tm_yday + 1;
    
    for(int i = 2025; i <= year; i++){
        if (i % 4 == 0){
            mtday[1] = 29;
        }
        for(int j = 0; j < 12; j++){
            for(int k = 1; k <= mtday[j]; k++){
                dday++;
                if(i == year && j == month2 && k == day){
                    printf("\nD-day: %d", dday - today);
                    return 1;
                }
            }
        }
    }
    
    
    
}

void calender(int year, int month) {
    enum month {jan, feb, mar, apr, may, jun, jul, aug, sep, oct, nov, dec};
    enum days {sun, mon, tue, wed, thu, fri, sat};
    enum month m;
    enum days w = wed;
    int mtday[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31}, firstWeek = 1; 
    time_t timer;
    struct tm* t;
    timer = time(NULL);
    t = localtime(&timer);
    int today = t->tm_yday + 1;
    for (int k = 2025; k <= year; k++) {
        if (k % 4 == 0) {
            mtday[1] = 29;
        } else {
            mtday[1] = 28;
        }
        for (m = jan + 1; m <= 12; m++) {
            if (m == month && k == year) {
                switch (m-1) {
                    case jan:
                        printf("       %d jan\n", year);
                        printf("----------------------\n");
                        break;
                    case feb:
                        printf("       %d feb\n", year);
                        printf("----------------------\n");
                        break;
                    case mar:
                        printf("       %d mar\n", year);
                        printf("----------------------\n");
                        break;
                    case apr:
                        printf("       %d apr\n", year);
                        printf("----------------------\n");
                       break;
                    case may:
                        printf("       %d may\n", year);
                        printf("----------------------\n");
                        break;
                    case jun:
                        printf("       %d jun\n", year);
                        printf("----------------------\n");
                        break;
                    case jul:
                        printf("       %d jul\n", year);
                        printf("----------------------\n");
                        break;
                    case aug:
                        printf("       %d aug\n", year);
                        printf("----------------------\n");
                        break;
                    case sep:
                        printf("       %d sep\n", year);
                        printf("----------------------\n");
                        break;
                    case oct:
                        printf("       %d oct\n", year);
                        printf("----------------------\n");
                        break;
                    case nov:
                        printf("       %d nov\n", year);
                        printf("----------------------\n");
                        break;
                    case dec:
                        printf("       %d dec\n", year);
                        printf("----------------------\n");
                        break;
                }
                printf("  s  m  t  w  t  f  s \n");
            }
            for (int i = 1; i <= mtday[m - 1]; i++) {
                if (firstWeek == 1) {
                    for (int j = 0; j < w; j++) {
                        if (m == month && k == year) {
                            printf("   ");
                        }
                    }
                    firstWeek = 0;
                }                
                if (w == sat + 1) {
                    w = sun;
                    if (m == month && k == year) {
                        printf("\n");
                    }
                }                
                if (m == month && k == year) {
                    printf(" %2d", i);
                }         
                w++;                
            }
            if (m == month && k == year) {
                break;
            }
            firstWeek = 1;
        }
    }

}
